<?xml version="1.0"?>
<project>
    <database>
        <schemas>
            <schema path='twitter-ddl.sql' />
        </schemas>
        <procedures>
            <procedure class='com.procedures.Insert' />
            <procedure class='com.procedures.Select' />
            <procedure class='com.procedures.Delete' />
            <procedure class='InsertTweet' partitioninfo='tweets.username: 0' >
                <sql>INSERT INTO tweets VALUES (?, ?);</sql>
            </procedure>
        </procedures>
        <partitions>
            <partition table='hashtags' column='hashtag' />
            <partition table='tweets' column='username' />
        </partitions>
        <export>
          <tables>
            <table name="tweets"/>
          </tables>
        </export>
    </database>
</project>
