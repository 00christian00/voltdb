<?xml version="1.0"?>
<project>
     <security enabled="true"/>
     <database>
        <schemas>
            <schema path='satellite.ddl' />
        </schemas>
        <procedures>
            <procedure class='procedures.AddSatellite' groups="signal-group" />
            <procedure class='procedures.UpdateLocation' groups="signal-group" />
            <procedure class='procedures.GetLocationData' groups="tracker-group" />
            <procedure class='procedures.GetSatelliteData' groups="tracker-group" />
            <procedure class='simple.GetAllSatellites' groups="signal-group">
                 <sql>SELECT * FROM satellite ORDER BY id;</sql>
            </procedure>
           <procedure class='simple.GetThisLocation' 
                      partitioninfo="Location.id:0" groups="signal-group">
                 <sql >SELECT * FROM location WHERE id=?;</sql>
            </procedure>
        </procedures>
        <groups>
            <group name="tracker-group" />
            <group name="signal-group" />
            <group name="admin-group" adhoc="true" sysproc="true" />
        </groups>
        <partitions>
            <partition table='LOCATION' column='ID' />
            <partition table='SATELLITE' column='ID' />
        </partitions>
    </database>
</project>
