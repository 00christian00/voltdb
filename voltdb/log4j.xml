    <!-- logger name="EXPORT">
        <level value="INFO"/>
    </logger -->

    <!-- logger name="DRAGENT">
        <level value="INFO"/>
    </logger -->

    <!-- logger name="DRSTATS">
        <level value="INFO"/>
    </logger -->

    <!-- logger to route specific informational messages to the console. -->
    <logger name="CONSOLEONLY">
        <level value="INFO"/>
        <appender-ref ref="consoleonly"/>
        <appender-ref ref="file"/>
    </logger>

    <root>
        <priority value="info" />
        <appender-ref ref="file" />
        <appender-ref ref="console" />
    </root>
</log4j:configuration>
